<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bayembaye.example.com.finalappguideetudiant.fragments.ItemShower">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_shower_"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorBackgroundText"
            android:src="@drawable/ensa7" />

        <TextView
            android:id="@+id/id_title_shower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purpleLite"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Note"
            android:textColor="@color/colorBackgroundText"
            android:textStyle="bold" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/id_text_shower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" />
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>
